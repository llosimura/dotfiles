[alias]
    a = add
    bn = branch-name
    br = branch
    branch-name = "!git rev-parse --abbrev-ref HEAD"
    ci = commit
    cia = commit --amend
    cian = commit --amend --no-edit
    co = checkout
    coh = checkout HEAD .	
    cp = cherry-pick
    diffc = diff --cached
    lg = "log --oneline -n"
    pf = push -f
    publish = "!git push -u origin $(git branch-name)"
    rb = rebase
    rba = rebase --abort
    rbc = rebase --continue
    st = status
    wip = "!git add . && git ci -m WIP --no-verify"
